<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookingOtelProje</title>

    <!-- KETO CSS -->
    <link rel="stylesheet" href="~/keto-1.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/keto-1.0.0/css/style.css" />
    <link rel="stylesheet" href="~/keto-1.0.0/css/responsive.css" />
    <link rel="stylesheet" href="~/keto-1.0.0/css/jquery.mCustomScrollbar.min.css" />
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" />

    <!-- ASP.NET Varsayılan CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RapidApiWithBooking.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="main-layout">
    <!-- Loader -->
    <div class="loader_bg">
        <div class="loader">
            <img src="~/keto-1.0.0/images/loading.gif" alt="yükleniyor" />
        </div>
    </div>

    <!-- Header -->
    <header>
        <div class="container-fluid">
            <div class="row d_flex">
                <div class="col-md-3 col-sm-3 col logo_section">
                    <div class="full">
                        <div class="center-desk">
                            <div class="logo">
                                <a asp-controller="Hotel" asp-action="Index">BookingOtel</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-9 col-sm-9">
                    <nav class="navigation navbar navbar-expand-md navbar-dark">
                        <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarsExample04" aria-controls="navbarsExample04"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarsExample04">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item"><a class="nav-link" asp-controller="Hotel" asp-action="Index">Anasayfa</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Hotel" asp-action="SearchReservation">Oteller</a></li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <!-- Sayfa İçeriği -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted text-center mt-4">
        <div class="container">
            &copy; 2025 - Booking
        </div>
    </footer>

    <!-- JS Dosyaları -->
    <script src="~/keto-1.0.0/js/jquery.min.js"></script>
    <script src="~/keto-1.0.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/keto-1.0.0/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/keto-1.0.0/js/custom.js"></script>

    <!-- ASP.NET Varsayılan JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
