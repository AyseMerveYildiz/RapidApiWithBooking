<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewData["Title"] - Hotel</title>

    <!-- KETO CSS -->
    <link rel="stylesheet" href="@Url.Content("~/keto-1.0.0/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/keto-1.0.0/css/style.css")" />
    <link rel="stylesheet" href="@Url.Content("~/keto-1.0.0/css/responsive.css")" />
    <link rel="stylesheet" href="@Url.Content("~/keto-1.0.0/css/jquery.mCustomScrollbar.min.css")" />
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet" />
    <link rel="icon" href="@Url.Content("~/keto-1.0.0/images/fevicon.png")" type="image/gif" />
</head>

<body class="main-layout">

    <!-- loader -->
    <div class="loader_bg">
        <div class="loader">
            <img src="@Url.Content("~/keto-1.0.0/images/loading.gif")" alt="Loading..." />
        </div>
    </div>

    <!-- header -->
    <header>
        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                        <div class="full">
                            <div class="center-desk">
                                <div class="logo">
                                    <a href="@Url.Action("Index", "Home")">
                                       
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                        <nav class="navigation navbar navbar-expand-md navbar-dark">
                            <button class="navbar-toggler" type="button" data-toggle="collapse"
                                    data-target="#navbarsExample04" aria-controls="navbarsExample04"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarsExample04">
                                <ul class="navbar-nav mr-auto">
                                    <li class="nav-item active"><a class="nav-link" href="@Url.Action("Index", "Home")">Anasayfa</a></li>
                                    <li class="nav-item"><a class="nav-link" href="@Url.Action("About", "Home")">Hakkımızda</a></li>
                                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Rooms", "Home")">Otellerimiz</a></li>
                                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Gallery", "Home")">Galeri</a></li>
                                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Blog", "Home")">Blog</a></li>
                                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Contact", "Home")">Bize Ulaşın</a></li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Sayfa İçeriği -->
    @RenderBody()

    <!-- KETO JS -->
    <script src="@Url.Content("~/keto-1.0.0/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/keto-1.0.0/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/keto-1.0.0/js/jquery-3.0.0.min.js")"></script>
    <script src="@Url.Content("~/keto-1.0.0/js/jquery.mCustomScrollbar.concat.min.js")"></script>
    <script src="@Url.Content("~/keto-1.0.0/js/custom.js")"></script>
</body>
</html>
