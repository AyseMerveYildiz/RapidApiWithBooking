@model List<HotelsViewModel>

@{
    ViewData["Title"] = "Oteller";
    Layout = "~/Views/Shared/_HotelLayout.cshtml";
}

<section class="container py-5">
    <div class="row mb-4">
        <div class="col text-center">
            <h2 class="font-weight-bold">Uygun Oteller</h2>
            <p class="text-muted">Arama kriterlerinize uygun oteller listeleniyor.</p>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var hotel in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card border-0 shadow-sm h-100 hotel-card">
                        <img src="@hotel.CoverImageURL" class="card-img-top" alt="@hotel.HotelName" style="height: 250px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@hotel.HotelName</h5>
                            
                            <p class="mb-1"><strong>Puan:</strong> @hotel.ReviewScore (@hotel.ReviewScoreWord)</p>
                        </div>
                        <div class="card-footer bg-transparent border-0 text-center">
                            <a href="/Hotel/HotelDetail?hotelId=@hotel.HotelId&checkinDate=@ViewBag.CheckinDate&checkoutDate=@ViewBag.CheckoutDate"
                               class="btn btn-outline-primary w-100">Detayları Gör</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            Otel bulunamadı.
        </div>
    }
</section>

<style>
    .hotel-card:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease;
        box-shadow: 0 8px 30px rgba(0,0,0,0.1);
    }
</style>
