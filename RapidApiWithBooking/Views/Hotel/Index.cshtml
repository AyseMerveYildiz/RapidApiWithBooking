@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HotelLayout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<section class="banner_main">
    <div id="myCarousel" class="carousel slide banner" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">

                <!-- >>> YATAK FOTO: UZAT + BÜYÜT <<< -->
                <div class="position-relative" style="height:80vh; overflow:hidden;">
                    <!-- 65vh -> 80vh -->
                    <!-- Alt katman: hafif blur + büyük ölçek -->
                    <img src="@Url.Content("~/keto-1.0.0/images/banner1.jpg")"
                         alt="Hotel background"
                         style="position:absolute; inset:0; width:100%; height:100%;
                                object-fit:cover; object-position:center 60%;
                                filter: blur(2px); transform: scale(1.18);" /> <!-- scale ↑, odak ↓ -->
                    <!-- Üst katman: net görüntü, oval odak (aynı ama büyütülmüş) -->
                    <img src="@Url.Content("~/keto-1.0.0/images/banner1.jpg")"
                         alt="Hotel focus"
                         style="position:absolute; inset:0; width:100%; height:100%;
                                object-fit:cover; object-position:center 60%;
                                transform: scale(1.15);
                                -webkit-mask-image: radial-gradient(ellipse 48% 58% at 60% 52%, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 66%);
                                mask-image: radial-gradient(ellipse 48% 58% at 60% 52%, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 66%);" />
                </div>
                <!-- <<< YATAK FOTO BLOĞU BİTİŞ >>> -->

            </div>
        </div>
    </div>

    <!-- REZERVASYON: HİÇ DEĞİŞMEDİ -->
    <div class="booking_ocline" style="backdrop-filter: blur(12px); background-color: rgba(255, 255, 255, 0.6); border-radius: 16px; padding: 30px;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="book_room text-center p-4" style="
                        backdrop-filter: blur(4px);
                        background: rgba(255, 255, 255, 0.3);
                        border: 1px solid rgba(255, 255, 255, 0.2);
                        border-radius: 16px;
                        box-shadow: 0 8px 32px rgba(31, 38, 135, 0.2);">

                        <h2 style="color: black; font-weight: 700;">Rezervasyon Yap</h2>
                        <form asp-controller="Hotel" class="book_now mt-4" asp-action="SearchReservation" method="post">
                            <div class="form-group mb-3 text-start">
                                <label style="color: black;">Şehir</label>
                                <input class="form-control" placeholder="örn: Antalya" type="text" name="query" />
                            </div>
                            <div class="form-group mb-3 text-start">
                                <label style="color: black;">Giriş Tarihi</label>
                                <input class="form-control" type="date" name="checkinDate" />
                            </div>
                            <div class="form-group mb-3 text-start">
                                <label style="color: black;">Çıkış Tarihi</label>
                                <input class="form-control" type="date" name="checkoutDate" />
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group mb-3 text-start">
                                    <label style="color: black;">Yetişkin</label>
                                    <input class="form-control" type="number" name="adults" min="1" value="1" />
                                </div>
                                <div class="col-md-6 form-group mb-3 text-start">
                                    <label style="color: black;">Çocuk</label>
                                    <input class="form-control" type="number" name="children" min="0" value="0" />
                                </div>
                            </div>
                            <div class="form-group text-center mt-3">
                                <button type="submit" class="btn btn-dark w-100 py-2" style="border-radius: 8px;">
                                    <i class="fa-solid fa-magnifying-glass mr-1"></i> Otelleri Ara
                                </button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
